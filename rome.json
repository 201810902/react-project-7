{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma":"es5",
			"arrowParentheses":"always",
			"jsxQuoteStyle":"double",
			"quoteProperties":"asNeeded"
    }
  },
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": []
	}
}
